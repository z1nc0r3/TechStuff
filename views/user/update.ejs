<%- include('../partials/head') %> <%- include('../partials/header') %>

<section class="profile vh-75 d-flex align-items-center">
	<div class="container py-5 h-100">
		<main class="my-form pt-5">
			<div class="cotainer">
				<div class="row justify-content-center m-0">
					<div class="col-md-5">
						<div class="card">
							<div class="card-header text-center h5">Profile Update</div>
							<div class="card-body px-5">
								<form name="my-form" action="/update" method="POST" enctype="multipart/form-data">
									<div class="form-group row pb-3 pt-5">
										<label for="full_name" class="col-md-4 col-form-label text-md-right">First Name</label>
										<div class="col-md-8">
											<input type="text" class="form-control" id="firstname" name="firstname" value="<%= user.firstname %>" required />
										</div>
									</div>

									<div class="form-group row pb-3">
										<label for="full_name" class="col-md-4 col-form-label text-md-right">Last Name</label>
										<div class="col-md-8">
											<input type="text" class="form-control" id="lastname" name="lastname" value="<%= user.lastname %>" required />
										</div>
									</div>

									<div class="form-group row pb-3">
										<label for="email_address" class="col-md-4 col-form-label text-md-right">Email Address</label>
										<div class="col-md-8">
											<input class="form-control" id="email" name="email" type="mail" value="<%= user.email %>" required />
										</div>
									</div>

									<div class="form-group row pb-5">
										<label for="present_address" class="col-md-4 col-form-label text-md-right">Profile Picture</label>
										<div class="col-md-8">
											<input type="file" id="image" name="image" value="" accept=".png, .jpg, .jpeg" />
										</div>
									</div>

									<div class="col-md-12 text-center">
										<button type="submit" class="btn btn-primary m-4">Update</button>
									</div>

									<!-- register error message -->
									<% if (message.length > 0) { %>
									<div class="alert alert-danger mt-3" role="alert"><%- message %></div>
									<% } %>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
</section>

<%- include('../partials/foot') %> <%- include('../partials/footer') %>
